{
  "name": "fast-sfdc",
  "displayName": "fast-sfdc",
  "description": "",
  "version": "0.0.1",
  "publisher": "micheletriaca",
  "engines": {
    "vscode": "^1.24.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/package.xml",
    "workspaceContains:**/fastsfdc.json"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "FastSfdc.enterCredentials",
        "title": "Fast-Sfdc: Enter credentials..."
      },
      {
        "command": "FastSfdc.createMeta",
        "title": "Fast-Sfdc: Create new..."
      },
      {
        "command": "FastSfdc.createAuraDefinition",
        "title": "Fast-Sfdc: Create aura..."
      },
      {
        "command": "FastSfdc.retrieve",
        "title": "Fast-Sfdc: Retrieve metadata"
      },
      {
        "command": "FastSfdc.deploy",
        "title": "Fast-Sfdc: Deploy metadata"
      },
      {
        "command": "FastSfdc.validate",
        "title": "Fast-Sfdc: Validate metadata"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "FastSfdc.createAuraDefinition",
          "when": "false"
        },
        {
          "command": "FastSfdc.enterCredentials",
          "when": "fast-sfdc-active"
        },
        {
          "command": "FastSfdc.createMeta",
          "when": "fast-sfdc-active"
        },
        {
          "command": "FastSfdc.retrieve",
          "when": "fast-sfdc-active"
        },
        {
          "command": "FastSfdc.deploy",
          "when": "fast-sfdc-active"
        },
        {
          "command": "FastSfdc.validate",
          "when": "fast-sfdc-active"
        }  
      ],
      "editor/context": [
        {
          "command": "FastSfdc.createAuraDefinition",
          "when": "resourceExtname == .cmp",
          "group": "z_commands"
        }
      ],
      "explorer/context": [
        {
          "command": "FastSfdc.createAuraDefinition",
          "when": "resourceExtname == .cmp",
          "group": "z_commands"
        }
      ]
    },
    "languages": [
      {
        "id": "xml",
        "aliases": [
          "Aura"
        ],
        "extensions": [
          ".cmp"
        ]
      },
      {
        "id": "xml",
        "extensions": [
          ".object",
          ".layout",
          ".resource",
          ".remoteSite",
          ".labels",
          ".app",
          ".dashboard",
          ".permissionset",
          ".workflow",
          ".email",
          ".profile",
          ".scf",
          ".queue",
          ".reportType",
          ".report",
          ".weblink",
          ".tab",
          ".letter",
          ".role",
          ".homePageComponent",
          ".homePageLayout",
          ".objectTranslation",
          ".flow",
          ".datacategorygroup",
          ".snapshot",
          ".site",
          ".sharingRules",
          ".settings",
          ".callCenter",
          ".community",
          ".authProvider",
          ".customApplicationComponent",
          ".quickAction",
          ".approvalProcess",
          ".app",
          ".auradoc",
          ".evt",
          ".tokens",
          ".design",
          ".object"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.31",
    "@types/decompress": "^4.2.3",
    "@types/elegant-spinner": "^1.0.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.29",
    "@types/xml2js": "^0.4.3",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^2.6.1",
    "vscode": "^1.1.21"
  },
  "dependencies": {
    "adm-zip": "^0.4.11",
    "base64-async": "^2.1.3",
    "decompress": "^4.2.0",
    "elegant-spinner": "^1.0.1",
    "node-salesforce-connection": "^2.3.0",
    "xml2js": "^0.4.19"
  }
}
